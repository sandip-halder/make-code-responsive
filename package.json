{
  "name": "make-code-responsive",
  "displayName": "Make Code Responsive",
  "description": "A VS Code extension to transform code to be responsive.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:extension.makeResponsive"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.makeResponsive",
        "title": "Make Code Responsive"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install"
  },
  "devDependencies": {
    "@types/node": "^14.0.1",
    "@types/vscode": "^1.46.0",
    "typescript": "^3.9.5",
    "vscode": "^1.1.36"
  }
}
